<h1>Welcome <%=@user.email %></h1>
<br>
<form class="form-horizontal" action="update" method="post" accept-charset="utf-8" enctype="multipart/form-data">
    <input type="hidden" name="_method" value="put">
  <div class="form-group">
      <label for="fisrtname" class="col-sm-2 control-label">First name</label>
      <div class="col-sm-10">
          <% if @user.activated %>
            <input type="text" class="form-control" placeholder="" name="first_name" value=<%=@user.first_name %>   >
          <% else %>
            <input type="text" class="form-control" placeholder="" name="first_name" value=<%=@user.first_name %>  readonly >
          <%end%>
      </div>
    </div>
  
  <div class="form-group">
      <label for="last_name" class="col-sm-2 control-label">Last name</label>
      <div class="col-sm-10">
          <% if @user.activated %>
            <input type="text" class="form-control" placeholder="" name="last_name" value=<%=@user.last_name %> >
          <% else %>
            <input type="text" class="form-control" placeholder="" name="last_name" value=<%=@user.last_name %> readonly>
      <%end%>      
      </div>
    </div>

    <div class="form-group">
      <label for="email" class="col-sm-2 control-label">Email</label>
      <div class="col-sm-10">
          <p class="form-control-static"><%=@user.email %></p>
      </div>
    </div>

    <div class="form-group">
      <label for="password" class="col-sm-2 control-label">Password</label>
      <div class="col-sm-10">
        <% if @user.activated %>
          <input type="password" class="form-control" placeholder="" name="password" value=<%=@user.password %> >
        <%else%>
          <input type="password" class="form-control" placeholder="" name="password" value=<%=@user.password %> readonly>
        <%end%>
      </div>
    </div>



    <div class="form-group">
      <label for="" class="col-sm-2 control-label">Avatar</label>
      <% if @user.activated %>
      <input type="file" name="avatar" accept="image/*image/x-png,image/gif,image/jpeg" >
      <% else %>
            <input type="file" name="avatar" accept="image/*image/x-png,image/gif,image/jpeg" readonly>
      <%end%>
    </div>

    <img src="<%=@user.avatar_path %>" alt="" class="img-rounded avatar-update" >

    <div class="form-group">
      <label for="about_me" class="col-sm-2 control-label">About me</label>
      <div class="col-sm-10">
      <% if @user.activated %>
        <textarea name="about_me" class="form-control" rows="5"><%= @user.about_me %></textarea>
      <% else %>
        <textarea name="about_me" class="form-control" rows="5" readonly><%= @user.about_me %></textarea>
      <%end%>
      </div>
    </div>

  <input class="btn btn-primary" type="submit" name="submit" value="Update">
