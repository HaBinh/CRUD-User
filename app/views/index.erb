<form action="/search" method="post" accept-charset="utf-8">
					<input type="text" name="email" placeholder="Enter user's email you're looking for">
					<input type="submit" name="" value="Search">
</form>

<table class="table table-hover">
	<caption>All of users</caption>
	<thead>
		<tr>
			<th>Avatar</th>
			<th>First name</th>
			<th>Last name</th>
			<th>Email</th>
			<th></th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @users.each do |user| %>
		<tr id="item<%= user.id %>">
			<td> <img src="<%=user.avatar_path%>" alt="" class="img-rounded avatar-table"></td>
			<td><%=user.first_name %></td>
			<td><%=user.last_name %></td>
			<td><%=user.email %></td>
			<td>
				<button class="btn btnDelete" onclick="deleteRow(<%= user.id %>)">Delete</button>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>